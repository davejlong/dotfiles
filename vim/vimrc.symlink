call pathogen#infect()

syntax on

colorscheme solarized
if has('gui_running')
  set background=dark
else
  set background=dark
endif

set smartindent
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set cinkeys=0{,0},:,0#,!,!^F

" Line Numbering
set number
highlight LineNr term=bold cterm=NONE ctermfg=DarkGrey ctermbg=NONE gui=NONE guifg=DarkGrey guibg=NONE

nnoremap ,m :w <BAR> !lessc % > %:t:r.css<CR><space>
